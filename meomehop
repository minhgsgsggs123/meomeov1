-- Ch·ª©c nƒÉng toggle menu
ToggleBtn.MouseButton1Click:Connect(function()
    -- ƒê·∫£o ng∆∞·ª£c tr·∫°ng th√°i hi·ªÉn th·ªã c·ªßa MainFrame
    Main.Visible = not Main.Visible 
    -- ·∫®n WarningFrame khi ƒë√≥ng menu ƒë·ªÉ tr√°nh l·ªói
    WarningFrame.Visible = false 
end)

-- Hi·ªáu ·ª©ng hover cho n√∫t toggle
ToggleBtn.MouseEnter:Connect(function()
    TweenService:Create(ToggleBtn, TweenInfo.new(0.1), {BackgroundColor3 = Palette.Content}):Play()
    TweenService:Create(ToggleStroke, TweenInfo.new(0.1), {Color = Palette.Primary}):Play()
end)

ToggleBtn.MouseLeave:Connect(function()
    TweenService:Create(ToggleBtn, TweenInfo.new(0.1), {BackgroundColor3 = Palette.Background}):Play()
    TweenService:Create(ToggleStroke, TweenInfo.new(0.1), {Color = Palette.Secondary}):Play()
end)
