-- Danh s√°ch c√°c tab v·ªõi icon
local tabs = {
    {name = "Discord", icon = "‚Ñπ", order = 1},
    {name = "Farm", icon = "üè†", order = 2},
    {name = "Sea", icon = "üåä", order = 3},
    {name = "Islands", icon = "üèù", order = 4},
    {name = "Quests/Items", icon = "‚öî", order = 5},
    {name = "Fruit/Raid", icon = "üçé", order = 6},
    {name = "Stats", icon = "üìä", order = 7},
    {name = "Teleport", icon = "üíé", order = 8},
    {name = "Visual", icon = "üë§", order = 9},
    {name = "Shop", icon = "üõí", order = 10},
    {name = "Misc", icon = "‚öô", order = 11}
}

local currentTab = nil
local tabFrames = {}

-- H√†m ch·ªçn tab (bao g·ªìm vi·ªác c·∫≠p nh·∫≠t m√†u)
local function selectTab(tabName, tabButton)
    -- B·ªè ch·ªçn tab c≈©
    if currentTab and currentTab ~= tabName then
        local oldTabBtn = TabContainer:FindFirstChild(currentTab)
        if oldTabBtn then
            -- M√†u tab c≈©: kh√¥ng ch·ªçn
            TweenService:Create(oldTabBtn, TweenInfo.new(0.15), {
                BackgroundColor3 = Palette.UnselectedTab
            }):Play()

            local oldIcon = oldTabBtn:FindFirstChild("Icon")
            local oldText = oldTabBtn:FindFirstChildWhichIsA("TextLabel", true)
            if oldIcon and oldText then
                -- M√†u ch·ªØ/icon tab c≈©: TextPrimary
                TweenService:Create(oldIcon, TweenInfo.new(0.15), {
                    TextColor3 = Palette.TextPrimary
                }):Play()
                TweenService:Create(oldText, TweenInfo.new(0.15), {
                    TextColor3 = Palette.TextPrimary
                }):Play()
            end
        end

        if tabFrames[currentTab] then
            tabFrames[currentTab].Visible = false
        end
    end

    -- Ch·ªçn tab m·ªõi
    currentTab = tabName
    
    -- M√†u tab m·ªõi: SelectedTab (Primary Pink)
    TweenService:Create(tabButton, TweenInfo.new(0.15), {
        BackgroundColor3 = Palette.SelectedTab
    }):Play()
    
    local newIcon = tabButton:FindFirstChild("Icon")
    local newText = tabButton:FindFirstChildWhichIsA("TextLabel", true)
    if newIcon and newText then
        -- M√†u ch·ªØ/icon tab m·ªõi: Tr·∫Øng
        TweenService:Create(newIcon, TweenInfo.new(0.15), {
            TextColor3 = Color3.fromRGB(255, 255, 255)
        }):Play()
        TweenService:Create(newText, TweenInfo.new(0.15), {
            TextColor3 = Color3.fromRGB(255, 255, 255)
        }):Play()
    end

    -- Hi·ªÉn th·ªã n·ªôi dung tab
    if tabFrames[tabName] then
        tabFrames[tabName].Visible = true
    end
end

-- H√†m t·∫°o tab button
local function createTabButton(tabInfo)
    local TabBtn = Instance.new("TextButton")
    TabBtn.Name = tabInfo.name
    TabBtn.Size = UDim2.new(1, 0, 0, 38)
    -- M√†u n·ªÅn m·∫∑c ƒë·ªãnh c·ªßa tab: UnselectedTab
    TabBtn.BackgroundColor3 = Palette.UnselectedTab 
    TabBtn.BorderSizePixel = 0
    TabBtn.AutoButtonColor = false
    TabBtn.Text = ""
    TabBtn.LayoutOrder = tabInfo.order
    TabBtn.Parent = TabContainer
    
    local TabCorner = Instance.new("UICorner")
    TabCorner.CornerRadius = UDim.new(0, 6)
    TabCorner.Parent = TabBtn
    
    -- Icon
    local Icon = Instance.new("TextLabel")
    Icon.Name = "Icon"
    Icon.Size = UDim2.new(0, 24, 1, 0)
    Icon.Position = UDim2.new(0, 12, 0, 0)
    Icon.BackgroundTransparency = 1
    Icon.Text = tabInfo.icon
    Icon.TextSize = 16
    Icon.Font = Enum.Font.Gotham
    -- M√†u ch·ªØ/icon m·∫∑c ƒë·ªãnh: TextPrimary
    Icon.TextColor3 = Palette.TextPrimary 
    Icon.TextXAlignment = Enum.TextXAlignment.Center
    Icon.Parent = TabBtn
    
    -- Text
    local TabText = Instance.new("TextLabel")
    TabText.Size = UDim2.new(1, -48, 1, 0)
    TabText.Position = UDim2.new(0, 44, 0, 0)
    TabText.BackgroundTransparency = 1
    TabText.Text = tabInfo.name
    TabText.TextSize = 13
    TabText.Font = Enum.Font.Gotham
    -- M√†u ch·ªØ/icon m·∫∑c ƒë·ªãnh: TextPrimary
    TabText.TextColor3 = Palette.TextPrimary
    TabText.TextXAlignment = Enum.TextXAlignment.Left
    TabText.Parent = TabBtn
    
    -- T·∫°o frame n·ªôi dung cho tab n√†y
    local Frame = Instance.new("ScrollingFrame")
    Frame.Name = tabInfo.name .. "Frame"
    Frame.Size = UDim2.new(1, 0, 1, 0)
    Frame.BackgroundTransparency = 1
    Frame.BorderSizePixel = 0
    Frame.ScrollBarThickness = 4
    Frame.ScrollBarImageColor3 = Palette.Primary
    Frame.Visible = false
    Frame.Parent = TabContent
    
    -- Placeholder text
    local PlaceholderText = Instance.new("TextLabel")
    PlaceholderText.Size = UDim2.new(1, -20, 0, 50)
    PlaceholderText.Position = UDim2.new(0, 10, 0, 10)
    PlaceholderText.BackgroundTransparency = 1
    PlaceholderText.Text = "Ch·ª©c nƒÉng " .. tabInfo.name .. " ƒëang ƒë∆∞·ª£c ph√°t tri·ªÉn..."
    PlaceholderText.TextSize = 16
    PlaceholderText.Font = Enum.Font.Gotham
    PlaceholderText.TextColor3 = Palette.TextPrimary
    PlaceholderText.TextWrapped = true
    PlaceholderText.Parent = Frame
    
    tabFrames[tabInfo.name] = Frame
    
    -- Hi·ªáu ·ª©ng hover
    TabBtn.MouseEnter:Connect(function()
        if currentTab ~= tabInfo.name then
            TweenService:Create(TabBtn, TweenInfo.new(0.15), {
                BackgroundColor3 = Palette.HoverTab -- M√†u hover nh·∫π
            }):Play()
        end
    end)
    
    TabBtn.MouseLeave:Connect(function()
        if currentTab ~= tabInfo.name then
            TweenService:Create(TabBtn, TweenInfo.new(0.15), {
                BackgroundColor3 = Palette.UnselectedTab -- Quay l·∫°i m√†u Unselected
            }):Play()
        end
    end)
    
    -- Ch·ª©c nƒÉng click
    TabBtn.MouseButton1Click:Connect(function()
        selectTab(tabInfo.name, TabBtn)
    end)
    
    return TabBtn
end

-- T·∫°o t·∫•t c·∫£ c√°c tab
for _, tab in ipairs(tabs) do
    createTabButton(tab)
end

-- Ch·ªçn tab ƒë·∫ßu ti√™n m·∫∑c ƒë·ªãnh
wait(0.1)
-- T√¨m TextButton ƒë·∫ßu ti√™n trong TabContainer
local firstTab = nil
for _, child in ipairs(TabContainer:GetChildren()) do
    if child:IsA("TextButton") then
        firstTab = child
        break
    end
end

if firstTab then
    -- G·ªçi h√†m selectTab thay v√¨ Fire() ƒë·ªÉ ƒë·∫£m b·∫£o hi·ªáu ·ª©ng m√†u ƒë∆∞·ª£c √°p d·ª•ng
    selectTab(firstTab.Name, firstTab) 
end

-- C·∫≠p nh·∫≠t k√≠ch th∆∞·ªõc canvas c·ªßa TabContainer
TabContainer.CanvasSize = UDim2.new(0, 0, 0, TabLayout.AbsoluteContentSize.Y + 10)
TabLayout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
    TabContainer.CanvasSize = UDim2.new(0, 0, 0, TabLayout.AbsoluteContentSize.Y + 10)
end)

