TabContent.BackgroundTransparency = 1
TabContent.Parent = Content

-- Danh s√°ch c√°c tab v·ªõi icon (gi·ªëng y h·ªát redz Hub)
local tabs = {
    {name = "Discord", icon = "‚Ñπ", order = 1},
    {name = "Farm", icon = "üè†", order = 2},
    {name = "Sea", icon = "üåä", order = 3},
    {name = "Islands", icon = "üèù", order = 4},
    {name = "Quests/Items", icon = "‚öî", order = 5},
    {name = "Fruit/Raid", icon = "üçé", order = 6},
    {name = "Stats", icon = "üìä", order = 7},
    {name = "Teleport", icon = "üíé", order = 8},
    {name = "Visual", icon = "üë§", order = 9},
    {name = "Shop", icon = "üõí", order = 10},
    {name = "Misc", icon = "‚öô", order = 11}
}

local currentTab = nil
local tabFrames = {}

-- H√†m t·∫°o tab button
local function createTabButton(tabInfo)
    local TabBtn = Instance.new("TextButton")
    TabBtn.Name = tabInfo.name
    TabBtn.Size = UDim2.new(1, 0, 0, 38)
    TabBtn.BackgroundColor3 = Color3.fromRGB(50, 50, 55)
    TabBtn.BorderSizePixel = 0
    TabBtn.AutoButtonColor = false
    TabBtn.Text = ""
    TabBtn.LayoutOrder = tabInfo.order
    TabBtn.Parent = TabContainer
    
    local TabCorner = Instance.new("UICorner")
    TabCorner.CornerRadius = UDim.new(0, 6)
    TabCorner.Parent = TabBtn
    
    -- Icon
    local Icon = Instance.new("TextLabel")
    Icon.Size = UDim2.new(0, 30, 1, 0)
    Icon.Position = UDim2.new(0, 8, 0, 0)
    Icon.BackgroundTransparency = 1
    Icon.Text = tabInfo.icon
    Icon.TextSize = 18
    Icon.Font = Enum.Font.GothamBold
    Icon.TextColor3 = Color3.fromRGB(180, 180, 185)
    Icon.TextXAlignment = Enum.TextXAlignment.Left
    Icon.Parent = TabBtn
    
    -- Text
    local TabText = Instance.new("TextLabel")
    TabText.Size = UDim2.new(1, -45, 1, 0)
    TabText.Position = UDim2.new(0, 40, 0, 0)
    TabText.BackgroundTransparency = 1
    TabText.Text = tabInfo.name
    TabText.TextSize = 14
    TabText.Font = Enum.Font.Gotham
    TabText.TextColor3 = Color3.fromRGB(180, 180, 185)
    TabText.TextXAlignment = Enum.TextXAlignment.Left
    TabText.Parent = TabBtn
    
    -- T·∫°o frame n·ªôi dung cho tab n√†y
    local Frame = Instance.new("ScrollingFrame")
    Frame.Name = tabInfo.name .. "Frame"
    Frame.Size = UDim2.new(1, 0, 1, 0)
    Frame.BackgroundTransparency = 1
    Frame.BorderSizePixel = 0
    Frame.ScrollBarThickness = 4
    Frame.ScrollBarImageColor3 = Color3.fromRGB(255, 105, 180)
    Frame.Visible = false
    Frame.Parent = TabContent
    
    -- Placeholder text
    local PlaceholderText = Instance.new("TextLabel")
    PlaceholderText.Size = UDim2.new(1, -20, 0, 50)
    PlaceholderText.Position = UDim2.new(0, 10, 0, 10)
    PlaceholderText.BackgroundTransparency = 1
    PlaceholderText.Text = "Ch·ª©c nƒÉng " .. tabInfo.name .. " ƒëang ƒë∆∞·ª£c ph√°t tri·ªÉn..."
    PlaceholderText.TextSize = 16
    PlaceholderText.Font = Enum.Font.Gotham
    PlaceholderText.TextColor3 = Color3.fromRGB(100, 100, 105)
    PlaceholderText.TextWrapped = true
    PlaceholderText.Parent = Frame
    
    tabFrames[tabInfo.name] = Frame
    
    -- Hi·ªáu ·ª©ng hover
    TabBtn.MouseEnter:Connect(function()
        if currentTab ~= tabInfo.name then
            TweenService:Create(TabBtn, TweenInfo.new(0.15), {
                BackgroundColor3 = Color3.fromRGB(60, 60, 65)
            }):Play()
        end
    end)
    
    TabBtn.MouseLeave:Connect(function()
        if currentTab ~= tabInfo.name then
            TweenService:Create(TabBtn, TweenInfo.new(0.15), {
                BackgroundColor3 = Color3.fromRGB(50, 50, 55)
            }):Play()
        end
    end)
    
    -- Ch·ª©c nƒÉng click
    TabBtn.MouseButton1Click:Connect(function()
        -- B·ªè ch·ªçn tab c≈©
        if currentTab then
            for _, child in pairs(TabContainer:GetChildren()) do
                if child:IsA("TextButton") and child.Name == currentTab then
                    TweenService:Create(child, TweenInfo.new(0.15), {
                        BackgroundColor3 = Color3.fromRGB(50, 50, 55)
                    }):Play()
                    local oldIcon = child:FindFirstChild("TextLabel")
                    local oldText = child:FindFirstChildWhichIsA("TextLabel", true)
                    if oldIcon then
                        TweenService:Create(oldIcon, TweenInfo.new(0.15), {
                            TextColor3 = Color3.fromRGB(180, 180, 185)
                        }):Play()
                    end
                    for _, label in pairs(child:GetChildren()) do
                        if label:IsA("TextLabel") and label ~= oldIcon then
                            TweenService:Create(label, TweenInfo.new(0.15), {
                                TextColor3 = Color3.fromRGB(180, 180, 185)
                            }):Play()
                        end
                    end
                end
            end
            if tabFrames[currentTab] then
                tabFrames[currentTab].Visible = false
            end
        end
        
        -- Ch·ªçn tab m·ªõi
        currentTab = tabInfo.name
        TweenService:Create(TabBtn, TweenInfo.new(0.15), {
            BackgroundColor3 = Color3.fromRGB(100, 60, 140)
        }):Play()
        TweenService:Create(Icon, TweenInfo.new(0.15), {
            TextColor3 = Color3.fromRGB(255, 255, 255)
        }):Play()
        TweenService:Create(TabText, TweenInfo.new(0.15), {
            TextColor3 = Color3.fromRGB(255, 255, 255)
        }):Play()
        
        -- Hi·ªÉn th·ªã n·ªôi dung tab
        if tabFrames[tabInfo.name] then
            tabFrames[tabInfo.name].Visible = true
        end
    end)
    
    return TabBtn
end

-- T·∫°o t·∫•t c·∫£ c√°c tab
for _, tab in ipairs(tabs) do
    createTabButton(tab)
end

-- Ch·ªçn tab ƒë·∫ßu ti√™n m·∫∑c ƒë·ªãnh
wait(0.1)
if TabContainer:GetChildren()[2] then
    TabContainer:GetChildren()[2].MouseButton1Click:Fire()
end

-- C·∫≠p nh·∫≠t k√≠ch th∆∞·ªõc canvas c·ªßa TabContainer
TabContainer.CanvasSize = UDim2.new(0, 0, 0, TabLayout.AbsoluteContentSize.Y + 10)
TabLayout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
    TabContainer.CanvasSize = UDim2.new(0, 0, 0, TabLayout.AbsoluteContentSize.Y + 10)
end)

-- Hi·ªáu ·ª©ng hover n√∫t t·∫Øt
CloseBtn.MouseEnter:Connect(function()
    TweenService:Create(CloseBtn, TweenInfo.new(0.1), {TextColor3 = Color3.fromRGB(255, 192, 203)}):Play()
end)
CloseBtn.MouseLeave:Connect(function()
    TweenService:Create(CloseBtn, TweenInfo.new(0.1), {TextColor3 = Color3.fromRGB(255, 255, 255)}):Play()
end)

-- Ch·ª©c nƒÉng khi nh·∫•n n√∫t X
CloseBtn.MouseButton1Click:Connect(function()
    WarningFrame.Visible = true
end)

-- Ch·ª©c nƒÉng khi nh·∫•n n√∫t C√≥
YesBtn.MouseButton1Click:Connect(function()
    gui:Destroy()
end)

-- Ch·ª©c nƒÉng khi nh·∫•n n√∫t Kh√¥ng
NoBtn.MouseButton1Click:Connect(function()
    WarningFrame.Visible = false
end)

-- Hi·ªáu ·ª©ng hover cho n√∫t C√≥
YesBtn.MouseEnter:Connect(function()
    TweenService:Create(YesBtn, TweenInfo.new(0.1), {BackgroundColor3 = Color3.fromRGB(255, 65, 140)}):Play()
end)
YesBtn.MouseLeave:Connect(function()
    TweenService:Create(YesBtn, TweenInfo.new(0.1), {BackgroundColor3 = Color3.fromRGB(255, 105, 180)}):Play()
end)

-- Hi·ªáu ·ª©ng hover cho n√∫t Kh√¥ng
NoBtn.MouseEnter:Connect(function()
    TweenService:Create(NoBtn, TweenInfo.new(0.1), {BackgroundColor3 = Color3.fromRGB(255, 192, 203)}):Play()
end)
NoBtn.MouseLeave:Connect(function()
    TweenService:Create(NoBtn, TweenInfo.new(0.1), {BackgroundColor3 = Color3.fromRGB(255, 182, 193)}):Play()
end)

-- Ch·ª©c nƒÉng toggle menu
ToggleBtn.MouseButton1Click:Connect(function()
    if Main.Visible then
        TweenService:Create(Main, TweenInfo.new(0.15), {BackgroundTransparency = 1}):Play()
        TweenService:Create(Header, TweenInfo.new(0.15), {BackgroundTransparency = 1}):Play()
        TweenService:Create(Title, TweenInfo.new(0.15), {TextTransparency = 1}):Play()
        
        wait(0.15)
        Main.Visible = false
        WarningFrame.Visible = false
    else
        Main.Visible = true
        Main.BackgroundTransparency = 1
        Header.BackgroundTransparency = 1
        Title.TextTransparency = 1
        
        TweenService:Create(Main, TweenInfo.new(0.2), {BackgroundTransparency = 0}):Play()
        TweenService:Create(Header, TweenInfo.new(0.2), {BackgroundTransparency = 0}):Play()
        TweenService:Create(Title, TweenInfo.new(0.2), {TextTransparency = 0}):Play()
    end
end)

-- Hi·ªáu ·ª©ng hover cho n√∫t toggle
ToggleBtn.MouseEnter:Connect(function()
    TweenService:Create(ToggleBtn, TweenInfo.new(0.1), {BackgroundColor3 = Color3.fromRGB(255, 250, 252)}):Play()
    TweenService:Create(ToggleStroke, TweenInfo.new(0.1), {Color = Color3.fromRGB(255, 105, 180)}):Play()
end)

ToggleBtn.MouseLeave:Connect(function()
    TweenService:Create(ToggleBtn, TweenInfo.new(0.1), {BackgroundColor3 = Color3.fromRGB(255, 240, 245)}):Play()
    TweenService:Create(ToggleStroke, TweenInfo.new(0.1), {Color = Color3.fromRGB(255, 182, 193)}):Play()
end)
